<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.gdmec.s07150705.filedemo.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pd"
        android:onClick="pd"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="esd"
        android:id="@+id/esd"
        android:onClick="esd"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ds"
        android:id="@+id/ds"
        android:onClick="ds"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dlcd"
        android:id="@+id/dlcd"
        android:onClick="dlcd"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rd"
        android:id="@+id/rd"
        android:onClick="rd"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result" />
</LinearLayout>
